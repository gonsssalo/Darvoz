<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    tools:context="pt.ipbeja.pdm1.darvoz.Marking.Marking">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imbtn_seguransa_social"
            android:layout_width="0dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/btn_seguransa_social_b"
            android:layout_height="80dp"
            android:onClick="btn_ss_onClick"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/imbtn_iefp"
            android:layout_width="0dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/btn_iefp_b"
            android:layout_height="80dp"
            android:onClick="btn_iefp_onClick"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/imgbtn_at"
            android:layout_width="0dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:onClick="btn_at_onClick"
            android:background="@drawable/bt_at_b"
            android:layout_height="80dp"
            android:layout_weight="1" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageButton
            android:id="@+id/imgbtn_cs1"
            android:layout_width="0dp"
            android:layout_marginLeft="50dp"
            android:background="@drawable/bt_cs1_b"
            android:onClick="btn_cs1_onClick"
            android:layout_height="80dp"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/imgbtn_cs2"
            android:layout_width="0dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:onClick="btn_cs2_onClick"
            android:background="@drawable/bt_cs2_b"
            android:layout_height="80dp"
            android:layout_weight="1" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="50dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:layout_width="match_parent"
                android:background="@drawable/btn_data_b"
                android:onClick="btn_select_data_onClick"
                android:layout_height="80dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Data" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:layout_width="match_parent"
                android:background="@drawable/btn_hora_b"
                android:onClick="btn_select_hora_onClick"
                android:layout_height="80dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hora" />

        </LinearLayout>




    </LinearLayout>
    <LinearLayout
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewEntidade"
            android:layout_width="match_parent"
            android:textColor="#FFFFFF"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            android:text="Sem Entidade defenida" />

        <TextView
            android:id="@+id/textViewData"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="#FFFFFF"
            android:background="@color/colorPrimary"
            android:text="Sem Data defenida" />

        <TextView
            android:id="@+id/textViewHora"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="#FFFFFF"
            android:background="@color/colorPrimary"
            android:text="Sem Hora defenida" />
    </LinearLayout>






    <LinearLayout
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_height="match_parent"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/bt_voltar_b"
                android:onClick="btn_voltar_onClick" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Voltar" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:background="@drawable/btn_enviar_b"
                android:onClick="btn_enviar_onClick" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Enviar" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>