<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top|center"
    android:orientation="vertical"
    tools:context="pt.ipbeja.pdm1.darvoz.Defenicoes.defenicoes_tipo.DefenicoesEntidades">

    <!-- Contacto Bombeiros -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contacto Bombeiros"
            android:textColor="@android:color/background_dark" />

        <EditText
            android:id="@+id/editTextBombeiros"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:inputType="number"
             />

    </LinearLayout>

    <!-- Contacto PSP -->
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contacto PSP"
            android:textColor="@android:color/background_dark" />

        <EditText
            android:id="@+id/editTextPSP"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:inputType="number"
             />

    </LinearLayout>

    <!-- Contacto 1 GNR -->
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contacto 1 GNR"
            android:textColor="@android:color/background_dark" />

        <EditText
            android:id="@+id/editText1GNR"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:inputType="number"
           />

    </LinearLayout>

    <!-- Contacto 2 GNR -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contacto 2 GNR"
            android:textColor="@android:color/background_dark" />

        <EditText
            android:id="@+id/editText2GNR"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:inputType="number"
           />
    </LinearLayout>

    <!-- Contacto Intérprete 1 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contacto Intérprete 1"
            android:textColor="@android:color/background_dark" />

        <EditText
            android:id="@+id/editText1Intérprete"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:inputType="number"
        />

    </LinearLayout>

    <!-- Contacto Intérprete 2 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contacto Intérprete 2"
            android:textColor="@android:color/background_dark" />

        <EditText
            android:id="@+id/editText2Intérprete"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:inputType="number"
             />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom|center"
        android:orientation="vertical">

        <Button
            android:id="@+id/button2"
            android:layout_width="140dp"
            android:layout_height="70dp"
            android:background="@drawable/bt_grava_sai_b"
            android:onClick="btn_gravar_onclick" />
    </LinearLayout>



</LinearLayout>
